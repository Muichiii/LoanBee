@{
    ViewData["Title"] = "Update Status";
}

@model LoanBee.Areas.Admin.Models.AdminUpdateStatusVm

<div class="container py-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <div>
            <h2>Update Loan Application Status</h2>
            <p class="text-muted">@Model.ApplicationNo</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary"
               href="@Url.Action("Index", "Home", new { area = "Admin" })">Back</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <form asp-action="Update" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="ApplicationNo" />
                <input type="hidden" asp-for="CurrentStatus" />

                <div class="mb-3">
                    <label class="form-label">Current Status</label>
                    <input class="form-control" value="@Model.CurrentStatus" disabled />
                </div>

                <div class="mb-3">
                    <label asp-for="NewStatus" class="form-label">New Status</label>

                    @if (Model.CurrentStatus == "Under Review")
                    {
                        <select asp-for="NewStatus" class="form-select">
                            <option value="Under Review">Under Review</option>
                            <option value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                        </select>
                    }
                    else if (Model.CurrentStatus == "Approved")
                    {
                        <select asp-for="NewStatus" class="form-select">
                            <option value="Approved">Approved</option>
                            <option value="Completed">Completed</option>
                        </select>
                    }
                    else
                    {
                        <select class="form-select" disabled>
                            <option>@Model.CurrentStatus</option>
                        </select>
                        <small class="text-muted">
                            This application can no longer be updated.
                        </small>
                    }
                </div>

                <button type="submit"
                        class="btn btn-primary"
                        @(Model.CurrentStatus == "Under Review" || Model.CurrentStatus == "Approved"
                                                ? "" : "disabled")>
                    Save
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
