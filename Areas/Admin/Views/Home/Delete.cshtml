@model LoanBee.Areas.Admin.Models.AdminDeleteApplicationVm
@{
    ViewData["Title"] = "Delete Application";
}

<div class="container py-5">
    <!-- Professional header with warning styling -->
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-5 pb-3 border-bottom" style="border-color: #dc3545 !important;">
        <div>
            <h1 class="mb-1 fw-bold" style="color: #dc3545;">Delete Application</h1>
            <p class="text-muted mb-0">This action cannot be undone</p>
        </div>
        <a class="btn btn-outline-secondary" href="@Url.Action("Details", "Home", new { area = "Admin", id = Model.ApplicationNo })">
            <i class="bi bi-arrow-left me-2"></i>Cancel
        </a>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0"">
                <div class="card-header fw-bold text-white py-3" style="background-color: #dc3545;">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion
                </div>
                <div class="card-body" style="background-color: #fafafa;">
                    <div class="alert alert-warning mb-4" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        <strong>Warning:</strong> Deleting this application is permanent and cannot be reversed.
                    </div>

                    <dl class="row mb-4">
                        <dt class="col-5 fw-bold">Application No</dt>
                        <dd class="col-7" style="color: #2c3e50;">@Model.ApplicationNo</dd>

                        <dt class="col-5 fw-bold">Status</dt>
                        <dd class="col-7"><span class="status-badge badge-danger rounded-pill px-3 py-2" style="min-width: 110px;">@Model.Status</span></dd>

                        <dt class="col-5 fw-bold">Date Applied</dt>
                        <dd class="col-7" style="color: #2c3e50;">@Model.DateApplied.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-5 fw-bold">Amount</dt>
                        <dd class="col-7" style="color: #2c3e50;">@Model.Amount</dd>

                        <dt class="col-5 fw-bold">Purpose</dt>
                        <dd class="col-7" style="color: #2c3e50;">@Model.Purpose</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="d-flex gap-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ApplicationNo" />

                        <button type="submit" class="btn btn-danger btn-lg fw-bold">
                            <i class="bi bi-trash me-2"></i>Yes, Delete
                        </button>

                        <a class="btn btn-outline-secondary btn-lg fw-bold"
                           href="@Url.Action("Details", "Home", new { area = "Admin", id = Model.ApplicationNo })">
                            <i class="bi bi-arrow-left me-2"></i>No, Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.1) !important;
        }

    .status-badge {
        display: inline-block;
        padding: 0.5rem 0.75rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: capitalize;
        text-align: center;
        min-width: 110px;
    }

    .badge-danger {
        background-color: #f8d7da;
        color: #721c24;
</style>
