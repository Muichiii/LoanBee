@model LoanBee.Models.Entities.Owner

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold">Welcome back, @(ViewBag.UserName ?? "User")!</h1>
            <p class="text-muted">Here's your loan management overview</p>
        </div>
        <div class="d-flex gap-3">
            <a asp-controller="LoanBee"
               asp-action="CreateLoanApplication"
               class="btn btn-primary text-white btn-lg shadow-sm">
                + New Application
            </a>

            <a asp-controller="LoanBee"
               asp-action="ViewAllApplications"
               class="btn btn-outline-primary btn-lg shadow-sm btn-outline-warning-white">
                View All Applications
            </a>

        </div>
    </div>

    @if (Model == null)
    {
        <div class="text-center p-5 bg-white rounded shadow-sm border">
            <h3 class="text-muted">No Applications Found</h3>
            <p class="lead mb-4">It looks like you haven't submitted a loan application yet.</p>
            <a asp-controller="LoanBee" asp-action="CreateLoanApplication" class="btn btn-outline-primary px-5">Get Started Now</a>
        </div>
    }
    else
    {
        <div class="card mb-4 shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold">Owner Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <small class="text-muted d-block text-uppercase fw-bold">Full Name</small>
                        <span>@Model.Owner_name</span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <small class="text-muted d-block text-uppercase fw-bold">TIN</small>
                        <span>@Model.Owner_tin_no</span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <small class="text-muted d-block text-uppercase fw-bold">Civil Status</small>
                        <span>@Model.Owner_civil_status</span>
                    </div>
                    <div class="col-md-4">
                        <small class="text-muted d-block text-uppercase fw-bold">Email</small>
                        <span>@Model.Owner_email_address</span>
                    </div>
                    <div class="col-md-4">
                        <small class="text-muted d-block text-uppercase fw-bold">Mobile</small>
                        <span>@Model.Owner_mobile_no</span>
                    </div>
                    <div class="col-md-4">
                        <small class="text-muted d-block text-uppercase fw-bold">Landline</small>
                        <span>@Model.Owner_landline</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">Active Applications</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-3 border-0">Amount</th>
                                        <th class="border-0">Tenor</th>
                                        <th class="border-0">Applied Date</th>
                                        <th class="text-center border-0">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var app in Model.Applications.Where(a => a.Application_status != "Completed").OrderByDescending(a => a.Application_date))
                                    {
                                        <tr>
                                            <td class="ps-3 fw-bold">@app.Loan_amount.ToString("C0", new System.Globalization.CultureInfo("en-PH"))</td>
                                            <td>@app.Loan_tenor</td>
                                            <td>@app.Application_date.ToString("yyyy-MM-dd")</td>
                                            <td class="text-center">
                                                @{
                                                    var badgeClass = app.Application_status switch
                                                    {
                                                        "Approved" => "bg-success text-white",
                                                        "Under Review" => "bg-warning text-dark",
                                                        "Rejected" => "bg-danger text-white", // Added red badge for Rejected status
                                                        "Completed" => "bg-light text-dark border",
                                                        _ => "bg-info text-white"
                                                    };
                                                }
                                                <span class="badge @badgeClass rounded-pill px-3">@app.Application_status</span>
                                            </td>
                                        </tr>
                                    }
                                    @if (!Model.Applications.Any(a => a.Application_status != "Completed"))
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center py-4 text-muted">No ongoing applications.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">Bank Accounts</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var bank in Model.BankAccounts)
                        {
                            <div class="p-3 border rounded mb-3 bg-light">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-0 fw-bold">@bank.Account_no</h6>
                                        <small class="text-muted">@bank.Account_type</small>
                                    </div>
                                    <span class="badge bg-dark">Linked</span>
                                </div>
                                <hr class="my-2" />
                                <small class="text-muted">Partner since: @bank.Relationship_since</small>
                            </div>
                        }
                        @if (!Model.BankAccounts.Any())
                        {
                            <p class="text-center text-muted py-4">No bank accounts linked.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    body { background-color: #f8f9fa; }
    .card { border-radius: 12px; }
    .card-header { border-bottom: 1px solid #f0f0f0; }
    .table thead th { font-size: 0.85rem; color: #6c757d; }

