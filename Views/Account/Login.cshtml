@model LoanBee.Models.Entities.User

@{
    Layout = null; // We disable the layout to provide a clean, dedicated login screen
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LoanBee - Welcome</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico" />
    <style>
        body {

            background: linear-gradient(135deg, #fff9c4 0%, #fbc02d 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .auth-container {
            width: 100%;
            max-width: 450px;
            padding: 15px;
        }

        .auth-card {
            background: white;
            padding: 2.5rem;
            border-radius: 1.5rem;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        }

        .brand-name {
            color: #333; 
            font-weight: 800;
            letter-spacing: -1px;
            margin-bottom: 0.5rem;
        }

        .brand-tagline {
            color: #777;
            font-size: 0.9rem;
            margin-bottom: 2rem;
            display: block;
        }

        .toggle-link {
            color: #d4a017;
            cursor: pointer;
            text-decoration: none;
            font-weight: 600;
        }

            .toggle-link:hover {
                color: #b8860b;
                text-decoration: underline;
            }

        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(251, 192, 45, 0.25);
            border-color: #fbc02d;
        }

        .btn-yellow {
            background-color: #fbc02d;
            border-color: #fbc02d;
            color: #222;
            font-weight: 700;
            transition: all 0.3s ease;
        }

            .btn-yellow:hover {
                background-color: #f9a825;
                border-color: #f9a825;
                color: #000;
                transform: translateY(-1px);
            }
    </style>
</head>
<body>

    <div class="auth-container">
        <div class="auth-card">
            <h1 class="text-center brand-name">LoanBee</h1>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.Error
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div id="loginSection">
                <h4 class="mb-3">Login</h4>
                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <input type="email" name="email" class="form-control" placeholder="name@example.com" required />
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" placeholder="Enter password" required />
                    </div>
                    <button type="submit" class="btn btn-yellow w-100 btn-lg mb-3">Login</button>
                </form>
                <p class="text-center mb-0">
                    New to LoanBee? <span class="toggle-link" onclick="toggleAuth()">Create an account</span>
                </p>
            </div>

            <div id="signupSection" style="display: none;">
                <h4 class="mb-3">Sign Up</h4>
                <form asp-action="Signup" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Full Name</label>
                        <input asp-for="Name" class="form-control" placeholder="John Doe" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <button type="submit" class="btn btn-yellow w-100 btn-lg mb-3">Sign Up</button>
                </form>
                <p class="text-center mb-0">
                    Already have an account? <span class="toggle-link" onclick="toggleAuth()">Login instead</span>
                </p>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        function toggleAuth() {
            const login = document.getElementById('loginSection');
            const signup = document.getElementById('signupSection');

            if (login.style.display === 'none') {
                login.style.display = 'block';
                signup.style.display = 'none';
            } else {
                login.style.display = 'none';
                signup.style.display = 'block';
            }
        }
    </script>

</body>
</html>