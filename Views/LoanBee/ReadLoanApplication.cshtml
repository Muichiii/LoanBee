@model IEnumerable<LoanBee.Models.Entities.Application>

@{
    ViewData["Title"] = "Read Applications";
}

<div class="container mt-4">
    <h2>Track Your Loan Applications</h2>

    <form asp-action="ReadLoanApplication" method="get" class="row g-3 mb-4">
        <div class="col-auto">
            <input type="text" name="ownerTin" class="form-control" placeholder="Enter Owner TIN" value="@ViewBag.OwnerTin" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped border">
            <thead class="table-dark">
                <tr>
                    <th>Business Name</th>
                    <th>Application Date</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Business.Business_name</td>
                        <td>@item.Application_date.ToShortDateString()</td>
                        <td>
                            <span class="badge @(item.Application_status == "Pending" ? "bg-warning" : "bg-success")">
                                @item.Application_status
                            </span>
                        </td>
                        <td>
                            <a asp-action="ReadLoanApplicationDetails" asp-route-id="@item.Application_no" class="btn btn-sm btn-info">View Info</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (ViewBag.OwnerTin != null)
    {
        <div class="alert alert-info">No applications found for this TIN.</div>
    }
</div>