@model LoanBee.Models.Entities.Application

@{
    ViewData["Title"] = "Full Application Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Full Loan Application Details</h2>
        <a asp-action="ReadLoanApplication" asp-route-ownerTin="@Model.Business.Owner_tin_no" class="btn btn-secondary">
            Back to List
        </a>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">Loan Details</div>
        <div class="card-body row">
            <div class="col-md-3"><strong>Date Submitted:</strong><br />@Model.Application_date.ToShortDateString()</div>
            <div class="col-md-2"><strong>Status:</strong><br /><span class="badge bg-info">@Model.Application_status</span></div>
            <div class="col-md-2"><strong>Amount:</strong><br />@Model.Loan_amount.ToString("C")</div>
            <div class="col-md-2"><strong>Tenor:</strong><br />@Model.Loan_tenor</div>
            <div class="col-md-12 mt-3"><strong>Purpose:</strong><br />@Model.Loan_purpose</div>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-secondary text-white">Business Information</div>
        <div class="card-body row">
            <div class="col-md-4 mb-3"><strong>Business Name:</strong><br />@Model.Business.Business_name</div>
            <div class="col-md-4 mb-3"><strong>Business TIN:</strong><br />@Model.Business_tin_no</div>
            <div class="col-md-4 mb-3"><strong>Business Type:</strong><br />@Model.Business.Business_type</div>

            <div class="col-md-8 mb-3"><strong>Office Address:</strong><br />@Model.Business.Office_address</div>
            <div class="col-md-4 mb-3"><strong>Office Zip:</strong><br />@Model.Business.Office_zip</div>

            <div class="col-md-4 mb-3"><strong>Mobile Number:</strong><br />@Model.Business.Business_mobile_no</div>
            <div class="col-md-4 mb-3"><strong>Landline:</strong><br />@Model.Business.Business_landline</div>
            <div class="col-md-4 mb-3"><strong>Email:</strong><br />@Model.Business.Business_email</div>

            <div class="col-md-12"><strong>Website:</strong><br /><a href="@Model.Business.Business_website" target="_blank">@Model.Business.Business_website</a></div>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-info text-white">Owner Information</div>
        <div class="card-body row">
            <div class="col-md-4 mb-3"><strong>Full Name:</strong><br />@Model.Business.Owner.Owner_name</div>
            <div class="col-md-4 mb-3"><strong>Owner TIN:</strong><br />@Model.Business.Owner_tin_no</div>
            <div class="col-md-2 mb-3"><strong>Gender:</strong><br />@Model.Business.Owner.Owner_gender</div>
            <div class="col-md-2 mb-3"><strong>Birthday:</strong><br />@Model.Business.Owner.Owner_birthday.ToShortDateString()</div>

            <div class="col-md-4 mb-3"><strong>Citizenship:</strong><br />@Model.Business.Owner.Owner_citizenship</div>
            <div class="col-md-4 mb-3"><strong>Civil Status:</strong><br />@Model.Business.Owner.Owner_civil_status</div>
            <div class="col-md-4 mb-3"><strong>Place of Birth:</strong><br />@Model.Business.Owner.Owner_place_of_birth</div>

            <div class="col-md-8 mb-3"><strong>Home Address:</strong><br />@Model.Business.Owner.Owner_address</div>
            <div class="col-md-4 mb-3"><strong>Education:</strong><br />@Model.Business.Owner.Owner_education</div>

            <div class="col-md-4"><strong>Mobile Number:</strong><br />@Model.Business.Owner.Owner_mobile_no</div>
            <div class="col-md-4"><strong>Landline:</strong><br />@Model.Business.Owner.Owner_landline</div>
            <div class="col-md-4"><strong>Email Address:</strong><br />@Model.Business.Owner.Owner_email_address</div>
        </div>
    </div>

    <div class="card mb-5 shadow-sm">
        <div class="card-header bg-dark text-white">Bank Account Details</div>
        <div class="card-body row">
            <div class="col-md-4"><strong>Account Number:</strong><br />@Model.Account_no</div>
            <div class="col-md-4"><strong>Account Type:</strong><br />@Model.BankAccount.Account_type</div>
            <div class="col-md-4"><strong>Relationship Since:</strong><br />@Model.BankAccount.Relationship_since</div>
        </div>
    </div>
</div>