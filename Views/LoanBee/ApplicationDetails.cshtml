@model LoanBee.Models.Entities.Application

@{
    ViewData["Title"] = "Application Details";
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h2 class="fw-bold" style="color: #2c3e50;">Comprehensive Loan Record</h2>
        <a asp-action="ViewAllApplications" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to Tracking
        </a>
    </div>

    <!-- Enhanced card styling with improved visual hierarchy, spacing, and shadows -->
    <div class="card mb-4 shadow-lg border-0" style="border-radius: 8px; overflow: hidden;">
        <div class="card-header loan-details-header text-white py-4" style="background: linear-gradient(135deg, #f4b41a 0%, #e8a007 100%);">
            <h5 class="mb-0 fw-bold"><i class="bi bi-file-earmark-text me-2"></i>Loan Details</h5>
        </div>
        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-3 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Date Submitted</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50; font-size: 1.05rem;">@Model.Application_date.ToShortDateString()</p>
                </div>
                <div class="col-md-3 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Status</small>
                    <span class="badge @(Model.Application_status == "Under Review" ? "bg-warning text-dark" : "bg-success") p-2" style="font-size: 0.9rem;">
                        @Model.Application_status
                    </span>
                </div>
                <div class="col-md-3 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Loan Amount</small>
                    <p class="mb-0 fw-bold" style="color: #f4b41a; font-size: 1.1rem;">@Model.Loan_amount.ToString("C", new System.Globalization.CultureInfo("en-PH"))</p>
                </div>
                <div class="col-md-3 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Tenor</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50; font-size: 1.05rem;">@Model.Loan_tenor</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Enhanced business information card with improved data presentation -->
    <div class="card mb-4 shadow-lg border-0" style="border-radius: 8px; overflow: hidden;">
        <div class="card-header loan-details-header text-white py-4" style="background: linear-gradient(135deg, #f4b41a 0%, #e8a007 100%);">
            <h5 class="mb-0 fw-bold"><i class="bi bi-building me-2"></i>Business Information</h5>
        </div>
        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-4 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Business Name</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Business?.Business_name</p>
                </div>
                <div class="col-md-4 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Business TIN</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Business_tin_no</p>
                </div>
                <div class="col-md-4 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Business Type</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Business?.Business_type</p>
                </div>

                <div class="col-md-8">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Office Address</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Business?.Office_address</p>
                </div>
                <div class="col-md-4">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Office Zip</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Business?.Office_zip</p>
                </div>

                <div class="col-md-4 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Mobile Number</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Business?.Business_mobile_no</p>
                </div>
                <div class="col-md-4 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Email</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Business?.Business_email</p>
                </div>
                <div class="col-md-4 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Website</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Business?.Business_website</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Enhanced owner information card with cleaner layout -->
    <div class="card mb-4 shadow-lg border-0" style="border-radius: 8px; overflow: hidden;">
        <div class="card-header loan-details-header text-white py-4" style="background: linear-gradient(135deg, #f4b41a 0%, #e8a007 100%);">
            <h5 class="mb-0 fw-bold"><i class="bi bi-person-badge me-2"></i>Owner Information</h5>
        </div>
        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-4 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Full Name</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Owner?.Owner_name</p>
                </div>
                <div class="col-md-4 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Owner TIN</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Owner_tin_no</p>
                </div>
                <div class="col-md-2 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Civil Status</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Owner?.Owner_civil_status</p>
                </div>
                <div class="col-md-2 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Birthday</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Owner?.Owner_birthday.ToShortDateString()</p>
                </div>

                <div class="col-md-4 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Citizenship</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Owner?.Owner_citizenship</p>
                </div>
                <div class="col-md-8">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Home Address</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Owner?.Owner_address</p>
                </div>

                <div class="col-md-4 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Education</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Owner?.Owner_education</p>
                </div>
                <div class="col-md-4 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Mobile Number</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Owner?.Owner_mobile_no</p>
                </div>
                <div class="col-md-4 col-sm-6">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Email Address</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Owner?.Owner_email_address</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Enhanced bank account details card with modern layout -->
    <div class="card mb-5 shadow-lg border-0" style="border-radius: 8px; overflow: hidden;">
        <div class="card-header loan-details-header text-white py-4" style="background: linear-gradient(135deg, #f4b41a 0%, #e8a007 100%);">
            <h5 class="mb-0 fw-bold"><i class="bi bi-bank me-2"></i>Bank Account Details</h5>
        </div>
        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-4">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Account Number</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.Account_no</p>
                </div>
                <div class="col-md-4">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Account Type</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.BankAccount?.Account_type</p>
                </div>
                <div class="col-md-4">
                    <small class="text-muted d-block mb-2" style="font-size: 0.85rem;">Relationship Since</small>
                    <p class="mb-0 fw-bold" style="color: #2c3e50;">@Model.BankAccount?.Relationship_since</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .loan-details-header {
        background: linear-gradient(135deg, #f4b41a 0%, #e8a007 100%);
    }
</style>
