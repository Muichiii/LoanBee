@model LoanBee.Models.LoanApplicationViewModel

@{
    ViewData["Title"] = ViewBag.IsPreview == true ? "Review Application" : "New Loan Application";
}

<div class="container mt-4">
    <h2 class="mb-4">@(ViewBag.IsPreview == true ? "Review Your Application" : "Loan Application Form")</h2>

    <form asp-action="CreateLoanApplication" method="post">
        @if (ViewBag.IsPreview == true)
        {
            @Html.HiddenFor(m => m.Application.Loan_amount)
            @Html.HiddenFor(m => m.Application.Loan_tenor)
            @Html.HiddenFor(m => m.Application.Loan_purpose)
            @Html.HiddenFor(m => m.Business.Business_tin_no)
            @Html.HiddenFor(m => m.Business.Business_name)
            @Html.HiddenFor(m => m.Business.Business_type)
            @Html.HiddenFor(m => m.Business.Office_address)
            @Html.HiddenFor(m => m.Business.Office_zip)
            @Html.HiddenFor(m => m.Business.Business_landline)
            @Html.HiddenFor(m => m.Business.Business_mobile_no)
            @Html.HiddenFor(m => m.Business.Business_email)
            @Html.HiddenFor(m => m.Business.Business_website)
            @Html.HiddenFor(m => m.Owner.Owner_name)
            @Html.HiddenFor(m => m.Owner.Owner_tin_no)
            @Html.HiddenFor(m => m.Owner.Owner_gender)
            @Html.HiddenFor(m => m.Owner.Owner_birthday)
            @Html.HiddenFor(m => m.Owner.Owner_citizenship)
            @Html.HiddenFor(m => m.Owner.Owner_civil_status)
            @Html.HiddenFor(m => m.Owner.Owner_address)
            @Html.HiddenFor(m => m.Owner.Owner_place_of_birth)
            @Html.HiddenFor(m => m.Owner.Owner_mobile_no)
            @Html.HiddenFor(m => m.Owner.Owner_landline)
            @Html.HiddenFor(m => m.Owner.Owner_email_address)
            @Html.HiddenFor(m => m.Owner.Owner_education)
            @Html.HiddenFor(m => m.BankAccount.Account_no)
            @Html.HiddenFor(m => m.BankAccount.Account_type)
            @Html.HiddenFor(m => m.BankAccount.Relationship_since)

            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white fw-bold">1. Loan Details</div>
                <div class="card-body row">
                    <div class="col-md-4"><strong>Amount:</strong><br />@Model.Application.Loan_amount.ToString("N2")</div>
                    <div class="col-md-4"><strong>Tenor:</strong><br />@Model.Application.Loan_tenor</div>
                    <div class="col-md-4"><strong>Purpose:</strong><br />@Model.Application.Loan_purpose</div>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-secondary text-white fw-bold">2. Business Information</div>
                <div class="card-body row">
                    <div class="col-md-4 mb-2"><strong>Name:</strong><br />@Model.Business.Business_name</div>
                    <div class="col-md-4 mb-2"><strong>TIN:</strong><br />@Model.Business.Business_tin_no</div>
                    <div class="col-md-4 mb-2"><strong>Type:</strong><br />@Model.Business.Business_type</div>
                    <div class="col-md-8 mb-2"><strong>Office Address:</strong><br />@Model.Business.Office_address</div>
                    <div class="col-md-4 mb-2"><strong>Zip Code:</strong><br />@Model.Business.Office_zip</div>
                    <div class="col-md-4 mb-2"><strong>Landline:</strong><br />@Model.Business.Business_landline</div>
                    <div class="col-md-4 mb-2"><strong>Mobile:</strong><br />@Model.Business.Business_mobile_no</div>
                    <div class="col-md-4 mb-2"><strong>Email:</strong><br />@Model.Business.Business_email</div>
                    <div class="col-md-12"><strong>Website:</strong><br />@Model.Business.Business_website</div>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-info text-white fw-bold">3. Owner Information</div>
                <div class="card-body row">
                    <div class="col-md-4 mb-2"><strong>Full Name:</strong><br />@Model.Owner.Owner_name</div>
                    <div class="col-md-4 mb-2"><strong>TIN:</strong><br />@Model.Owner.Owner_tin_no</div>
                    <div class="col-md-2 mb-2"><strong>Gender:</strong><br />@Model.Owner.Owner_gender</div>
                    <div class="col-md-2 mb-2"><strong>Birthday:</strong><br />@Model.Owner.Owner_birthday.ToShortDateString()</div>
                    <div class="col-md-4 mb-2"><strong>Citizenship:</strong><br />@Model.Owner.Owner_citizenship</div>
                    <div class="col-md-4 mb-2"><strong>Status:</strong><br />@Model.Owner.Owner_civil_status</div>
                    <div class="col-md-4 mb-2"><strong>Education:</strong><br />@Model.Owner.Owner_education</div>
                    <div class="col-md-8 mb-2"><strong>Address:</strong><br />@Model.Owner.Owner_address</div>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-dark text-white fw-bold">4. Bank Details</div>
                <div class="card-body row">
                    <div class="col-md-4"><strong>Account No:</strong><br />@Model.BankAccount.Account_no</div>
                    <div class="col-md-4"><strong>Type:</strong><br />@Model.BankAccount.Account_type</div>
                    <div class="col-md-4"><strong>Since:</strong><br />@Model.BankAccount.Relationship_since</div>
                </div>
            </div>

            <div class="text-center mb-5">
                <button type="submit" name="submitButton" value="Edit" class="btn btn-secondary btn-lg px-5 me-3">Edit Details</button>
                <button type="submit" name="submitButton" value="Submit" class="btn btn-success btn-lg px-5">Confirm & Submit</button>
            </div>
        }
        else
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white fw-bold">Loan Details</div>
                <div class="card-body row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Application.Loan_amount" class="form-label">Amount</label>
                        <input asp-for="Application.Loan_amount" class="form-control" type="number" />
                        <span asp-validation-for="Application.Loan_amount" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Application.Loan_tenor" class="form-label">Tenor</label>
                        <select asp-for="Application.Loan_tenor" class="form-select">
                            <option value="">-- Select Tenor --</option>
                            <option value="12 months">12 months</option>
                            <option value="18 months">18 months</option>
                            <option value="24 months">24 months</option>
                            <option value="36 months">36 months</option>
                        </select>
                        <span asp-validation-for="Application.Loan_tenor" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Application.Loan_purpose" class="form-label">Purpose</label>
                        <select asp-for="Application.Loan_purpose" class="form-select">
                            <option value="">-- Select Purpose --</option>
                            <option value="Working Capital Requirements">Working Capital Requirements</option>
                            <option value="Purchase Equipment/Fixed Assets">Purchase Equipment/Fixed Assets</option>
                            <option value="Purchase/Remodel Workspace">Purchase/Remodel Workspace</option>
                            <option value="Business Expansion">Business Expansion</option>
                        </select>
                        <span asp-validation-for="Application.Loan_purpose" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-secondary text-white fw-bold">Business Information</div>
                <div class="card-body row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Business.Business_tin_no" class="form-label">Business TIN</label>
                        <input asp-for="Business.Business_tin_no" class="form-control" />
                        <span asp-validation-for="Business.Business_tin_no" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Business.Business_name" class="form-label">Business Name</label>
                        <input asp-for="Business.Business_name" class="form-control" />
                        <span asp-validation-for="Business.Business_name" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Business.Business_type" class="form-label">Business Type</label>
                        <input asp-for="Business.Business_type" class="form-control" />
                        <span asp-validation-for="Business.Business_type" class="text-danger small"></span>
                    </div>
                    <div class="col-md-8 mb-3">
                        <label asp-for="Business.Office_address" class="form-label">Office Address</label>
                        <input asp-for="Business.Office_address" class="form-control" />
                        <span asp-validation-for="Business.Office_address" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Business.Office_zip" class="form-label">Office Zip</label>
                        <input asp-for="Business.Office_zip" class="form-control" />
                        <span asp-validation-for="Business.Office_zip" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Business.Business_landline" class="form-label">Landline</label>
                        <input asp-for="Business.Business_landline" class="form-control" />
                        <span asp-validation-for="Business.Business_landline" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Business.Business_mobile_no" class="form-label">Mobile Number</label>
                        <input asp-for="Business.Business_mobile_no" class="form-control" />
                        <span asp-validation-for="Business.Business_mobile_no" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Business.Business_email" class="form-label">Email</label>
                        <input asp-for="Business.Business_email" class="form-control" type="email" />
                        <span asp-validation-for="Business.Business_email" class="text-danger small"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Business.Business_website" class="form-label">Website</label>
                        <input asp-for="Business.Business_website" class="form-control" />
                        <span asp-validation-for="Business.Business_website" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-info text-white fw-bold">Owner Information</div>
                <div class="card-body row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Owner.Owner_name" class="form-label">Full Name</label>
                        <input asp-for="Owner.Owner_name" class="form-control" />
                        <span asp-validation-for="Owner.Owner_name" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Owner.Owner_tin_no" class="form-label">Owner TIN</label>
                        <input asp-for="Owner.Owner_tin_no" class="form-control" />
                        <span asp-validation-for="Owner.Owner_tin_no" class="text-danger small"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Owner.Owner_gender" class="form-label">Gender</label>
                        <select asp-for="Owner.Owner_gender" class="form-select">
                            <option value="">-- Select --</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <span asp-validation-for="Owner.Owner_gender" class="text-danger small"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Owner.Owner_birthday" class="form-label">Birthday</label>
                        <input asp-for="Owner.Owner_birthday" class="form-control" type="date" />
                        <span asp-validation-for="Owner.Owner_birthday" class="text-danger small"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Owner.Owner_citizenship" class="form-label">Citizenship</label>
                        <input asp-for="Owner.Owner_citizenship" class="form-control" />
                        <span asp-validation-for="Owner.Owner_citizenship" class="text-danger small"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Owner.Owner_civil_status" class="form-label">Civil Status</label>
                        <select asp-for="Owner.Owner_civil_status" class="form-select">
                            <option value="">-- Select --</option>
                            <option value="Single">Single</option>
                            <option value="Married">Married</option>
                            <option value="Divorced">Divorced</option>
                            <option value="Widowed">Widowed</option>
                        </select>
                        <span asp-validation-for="Owner.Owner_civil_status" class="text-danger small"></span>
                    </div>
                    <div class="col-md-8 mb-3">
                        <label asp-for="Owner.Owner_address" class="form-label">Home Address</label>
                        <input asp-for="Owner.Owner_address" class="form-control" />
                        <span asp-validation-for="Owner.Owner_address" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Owner.Owner_place_of_birth" class="form-label">Place of Birth</label>
                        <input asp-for="Owner.Owner_place_of_birth" class="form-control" />
                        <span asp-validation-for="Owner.Owner_place_of_birth" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Owner.Owner_landline" class="form-label">Landline</label>
                        <input asp-for="Owner.Owner_landline" class="form-control" />
                        <span asp-validation-for="Owner.Owner_landline" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Owner.Owner_mobile_no" class="form-label">Mobile Number</label>
                        <input asp-for="Owner.Owner_mobile_no" class="form-control" />
                        <span asp-validation-for="Owner.Owner_mobile_no" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Owner.Owner_email_address" class="form-label">Email Address</label>
                        <input asp-for="Owner.Owner_email_address" class="form-control" type="email" />
                        <span asp-validation-for="Owner.Owner_email_address" class="text-danger small"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Owner.Owner_education" class="form-label">Educational Attainment</label>
                        <select asp-for="Owner.Owner_education" class="form-select">
                            <option value="">-- Select Education --</option>
                            <option value="High School">High School</option>
                            <option value="College">College</option>
                            <option value="Post-Graduate">Post-Graduate</option>
                            <option value="Technical/Vocational">Technical/Vocational</option>
                        </select>
                        <span asp-validation-for="Owner.Owner_education" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-dark text-white fw-bold">Bank Account Details</div>
                <div class="card-body row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="BankAccount.Account_no" class="form-label">Account Number</label>
                        <input asp-for="BankAccount.Account_no" class="form-control" />
                        <span asp-validation-for="BankAccount.Account_no" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="BankAccount.Account_type" class="form-label">Account Type</label>
                        <select asp-for="BankAccount.Account_type" class="form-select">
                            <option value="">-- Select Type --</option>
                            <option value="Savings">Savings</option>
                            <option value="Checking">Checking</option>
                            <option value="Current">Current</option>
                        </select>
                        <span asp-validation-for="BankAccount.Account_type" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="BankAccount.Relationship_since" class="form-label">Relationship Since</label>
                        <input asp-for="BankAccount.Relationship_since" class="form-control" placeholder="e.g. Jan 2020" />
                        <span asp-validation-for="BankAccount.Relationship_since" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="text-center mb-5">
                <button type="submit" name="submitButton" value="Next" class="btn btn-primary btn-lg px-5">Next</button>
            </div>
        }
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}